class Solution {
public:
    bool isPalindrome(int x) {
        if(x<0){
            return false;
        }
        if(x <= 2147483648){
            int tmp = x;
            unsigned int sol = 0;
            while(tmp){
                sol = sol*10 + tmp%10;  //reversing given x
            }
            if(sol == x){
                return true;
            } else{
            return false;  
            }
        } else{
            return false;
        }
    }
};
